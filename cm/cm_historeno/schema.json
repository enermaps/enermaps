      "type": "string",
      "default": "Non isolées",
      "enum": [
        "Non isolées",
        "Partiellement isolées",
        "Complètement isolées"
      ],
      "required": true
    },
    "Présence d'une installation solaire thermique": {
      "type": "string",
      "default": "Non",
      "enum": [
        "Non",
        "Oui"
      ],
      "required": true
    },
    "Surface de capteurs solaires thermiques automatique": {
      "type": "string",
      "default": "Oui",
      "enum": [
        "Non",
        "Oui"
      ],
      "required": true
