    "Typologie": {
      "type": "number",
      "minimum": 1,
      "maximum": 20,
      "default": 1,
      "required": true
    },
    "Type de chauffage": {
      "type": "string",
      "default": "Mazout",
      "enum": [
                "Mazout",
                "Gas naturel",
                "Pellets",
                "Büches bois",
                "Copeaux bois",
                "PAC air-eau",
                "PAC sol-eau",
                "Électrique direct",
                "Chauffage à distance"
            ],
      "required": true
    },
