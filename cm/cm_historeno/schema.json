      "type": "number",
      "minimum": 1900,
      "default": 1990,
      "required": true
    },
    "Type d'émetteurs": {
      "type": "string",
      "default": "Radiateurs",
      "enum": [
        "Radiateurs",
        "Radiateurs devant fenêtres",
        "Plancher(s) chauffant",
        "Murs chauffants",
        "Aucun (élec direct)"
      ],
      "required": true
    },
